# vim: ft=config syntax=sh
# sxhkd configs

# 0-9
alt + {1,4}
	{randwp,trash $(cat $HOME/.cache/wal/wal) && randwp}

alt + {7,shift + 7}
	{bt,blueman-manager}

alt + p
	pavucontrol

alt + {8,9,0}
	playerctl {previous,play-pause,next} &>/dev/null

ctrl + apostrophe
	dunstctl close

alt + apostrophe
	pybtc

ctrl + shift + apostrophe
	dunstctl close-all

# super
super + {b,shift + b,ctrl + b}
	{firefox,brave,librewolf}

super+d
	d_run

super + a
	rofi -show

super + m
	alacritty -e $SHELL -ic 'TERM=xterm ncmpcpp'

super + {z,Return}
	alacritty

super + {p,shift + p}
	{clips,pswd}

super + e
	alacritty -e $SHELL -ic 'TERM=xterm ranger'

super + y
	alacritty -e $SHELL -ic newsyt

super + {n,shift + n}
	alacritty -e $SHELL -ic {newsboat,newsmemes}

# alt
alt + f
	files

alt + {v,shift + v}
	alacritty -e $SHELL -ic 'vim $HOME/.files/vim/{vimrc.vim,plugins.vim}'

alt + r
	alacritty -e $SHELL -ic 'vim $HOME/.files/ranger/rc.conf'

alt + x
	alacritty -e $SHELL -ic 'vim $HOME/.files/x/xinitrc'

alt + s
	alacritty -e $SHELL -ic 'vim $HOME/.files/sxhkd/sxhkdrc'

alt + {b,shift + b}
	alacritty -e $SHELL -ic 'vim $HOME/.files/bash/{bashrc,bash_profile}'

alt + {z,shift + z}
	alacritty -e $SHELL -ic 'vim $HOME/.files/zsh/{zshrc,zprofile}'

alt + {i,shift + i}
	alacritty -e $SHELL -ic 'vim $HOME/.files/i3/{i3config,i3status.conf}'

alt + {m,shift + m}
	alacritty -e $SHELL -ic 'vim $HOME/.files/ncmpcpp/{config,bindings}'

alt + y
	alacritty -e $SHELL -ic 'vim $HOME/.files/newsboat/urls_yt'

alt + {n,shift + n}
	alacritty -e $SHELL -ic 'vim $HOME/.files/newsboat/{config,urls}'
