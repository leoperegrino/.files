# vim: ft=config
# sxhkd configs

alt + 1
	randwp

alt + {7,shift + 7}
	{bt,blueman-manager}

alt + p
	pavucontrol

alt + {8,9,0}
	mpc {prev,toggle,next} &>/dev/null

# super starts
super + {b,shift + b}
	{firefox,brave}

super + {m,shift + m}
	alacritty -e {ncmpcpp,musikcube}

super + {z,Return}
	alacritty --working-directory $HOME

super + {shift + z,shift + Return}
	termite -d $HOME

super + e
	alacritty -e ranger

super + {a,shift + a}
	rofi -show drun -config $FILES/rofi/{blurry.rasi,launchpad.rasi}

super + n
	alacritty -e newsboat

# alt configs
alt + v
	alacritty -e vim $FILES/vim/vimrc

alt + e
	alacritty -e vim $FILES/ranger/rc.conf

alt + x
	alacritty -e vim $FILES/x/xinitrc

alt + s
	alacritty -e vim $FILES/sxhkd/sxhkdrc

alt + {b,shift + b}
	alacritty -e vim $FILES/bash/{bashrc,bash_profile}

alt + {i,shift + i}
	alacritty -e vim $FILES/i3/{config.i3config,i3status.conf}

alt + {m,shift + m}
	alacritty -e vim $FILES/ncmpcpp/{config,bindings}

alt + {n,shift + n}
	alacritty -e vim $FILES/newsboat/{config,urls}
