# vim: syntax=cfg
# template for using with pywal.
# pywal will generate a colorscheme and fill {} placeholders with it.
# the generated version will be your real dunstrc.

[global]
    ### Display ###
    frame_width = 0
    frame_color = "{background}"
    separator_color = foreground

    ### Geometry ###
    width = 300
    height = 300
    offset = 30x30
    scale = 0

    ### Text ###
    font = "Noto Sans Mono 7"

    ### Icons ###
    max_icon_size = 48
    icon_path = /usr/share/icons/Papirus/64x64/apps

    ### Misc/Advanced ###
    dmenu = dmen -p dunst:
    browser = /usr/bin/firefox --new-window

[experimental]
    per_monitor_dpi = true

[urgency_low]
    background = "{color5}"
    foreground = "#FFFFFF"
    #icon = /path/to/low-urgent-icon
    timeout = 5

[urgency_normal]
    background = "{color3}"
    foreground = "#FFFFFF"
    #icon = /path/to/normal-urgent-icon
    timeout = 10

[urgency_critical]
    background = "{color1}"
    foreground = "#FFFFFF"
    frame_color = "{foreground}"
    #icon = /path/to/critical-urgent-icon
    timeout = 0
