#!/bin/bash
force_color_prompt=yes
set -o vi

PS1=' \
\[\033[1;36m\]\
\u\
\[\033[37m\]\
@\
\[\033[3;31m\]\
\h:\
\[\033[0;1;32m\]\
\w\
\[\033[37m\]\
\$\
\[\033[0m\]'

alias \
	mv="mv -iv" \
	rm="rm -iv" \
	ln="ln -v"\
	ls="ls -1 --color=auto"\
	sl="sl -al"\
	grep="grep -i --color=auto"\
	mkdir="mkdir -pv" \
	cp="cp -iv" \
	xmod="xmodmap /home/leop/.files/kbd/qwerty.altgr" \
	\
	upp="yay -Syu"\
	shut="shutdown now"\
	susp="systemctl suspend"\
	\
	la="ls -lhANX --group-directories-first"\
	l="ls -lhNX --group-directories-first"\
	lsd="lsd -lAh1 --group-dirs --blocks permission,size,name"\
	\
	q="exit"\
	cl="clear"\
	rofi="rofi -show drun"\
	sptd="spotifyd -b pulseaudio"\
	octagui="octave --gui -H"\
	picom="picom --experimental-backends"\
	LA="nmcli con up LA"\
	notif='notify-send "DUNST_COMMAND_TOGGLE"'\
