#!/bin/bash
force_color_prompt=yes
set -o vi

PS1=' \
\[\033[1;36m\]\
\u\
\[\033[37m\]\
@\
\[\033[3;31m\]\
[\h]:\
\[\033[0;1;32m\]\
\w\
\[\033[37m\]\
\$\
\[\033[0m\]'

alias \
	mv="mv -iv" \
	rm="rm -iv" \
	ls="ls -1 --color=auto"\
	grep="grep -i --color=auto"\
	mkdir="mkdir -pv" \
	ln="ln -v"\
	cp="cp -iv" \
	q="exit"\
	cl="clear"\
	xmod="xmodmap $FILES/kbd/qwerty.altgr" \
	\
	upp="yay -Syu"\
	shut="shutdown now"\
	susp="systemctl suspend"\
	\
	la="ls -lhANX --group-directories-first"\
	l="ls -lhNX --group-directories-first"\
	lsd="lsd -lAh1 --group-dirs --blocks permission,size,name"\
	\
	vim="nvim"\
	ytdl="youtube-dl"\
	python="python -q"\
	ipynb="setsid -f jupyter notebook >/dev/null 2>&1"\
	picom="picom --experimental-backends"\
	r="R --quiet"
