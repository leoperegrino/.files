#!/bin/bash
# ~/.bash_profile
export EVENT_NOEPOLL=1

# hist options
shopt -s histappend
export HISTSIZE=
export HISTFILESIZE=
export HISTCONTROL=ignoredups:erasedups
export PROMPT_COMMAND="history -a; history -c; history -r"
export HISTTIMEFORMAT='%d/%m %H:%M  '
export HISTIGNORE="ls:cd:q:cl"

# export options
export PATH="$PATH":"$HOME"/bin:"$HOME"/.local/bin
export XDG_DATA_HOME="$HOME"/.local/share
export XDG_CACHE_HOME="$HOME"/.cache
export XDG_CONFIG_HOME="$HOME"/.config
export FILES="$HOME"/.files
#
export VIMINIT=":source $XDG_CONFIG_HOME"/vim/vimrc
export XINITRC="$XDG_CONFIG_HOME"/X11/xinitrc
export ZDOTDIR="$XDG_CONFIG_HOME"/zsh
export GNUPGHOME="$XDG_CONFIG_HOME"/gpg
export PASSWORD_STORE_DIR="$XDG_CONFIG_HOME"/pass
#
export GTK_RC_FILES="$XDG_CONFIG_HOME"/gtk-1.0/gtkrc
export GTK2_RC_FILES="$XDG_CONFIG_HOME"/gtk-2.0/gtkrc
export IPYTHONDIR="$XDG_CONFIG_HOME"/ipython
export PYTHONSTARTUP="$XDG_CONFIG_HOME"/python/pythonrc
export JUPYTER_CONFIG_DIR="$XDG_CONFIG_HOME"/jupyter
export NPM_CONFIG_USERCONFIG="$XDG_CONFIG_HOME"/npm/npmrc
export R_PROFILE_USER="$XDG_CONFIG_HOME"/R/Rprofile
export R_ENVIRON_USER="$XDG_CONFIG_HOME"/R/Renviron
export R_HISTFILE="$XDG_CONFIG_HOME"/R/Rhistory
#
export PYLINTHOME="$XDG_CACHE_HOME"/pylint
export XAUTHORITY="$XDG_CACHE_HOME"/Xauthority
export GRADLE_USER_HOME="$XDG_CACHE_HOME"/gradle
export HISTFILE="$XDG_CACHE_HOME"/bash/history
#
export FONTS="$XDG_DATA_HOME"/fonts:/usr/share/fonts
#
export EDITOR=nvim
export BROWSER=firefox
export TERM=alacritty

# less options
export LESSOPEN="| /usr/bin/source-highlight-esc.sh %s"
export LESS=-Ri
export LESSHISTFILE=-
export LESS_TERMCAP_mb=$'\E[1;31m'     # begin blink
export LESS_TERMCAP_md=$'\E[1;36m'     # begin bold
export LESS_TERMCAP_me=$'\E[0m'        # reset bold/blink
export LESS_TERMCAP_us=$'\E[1;32m'     # begin underline
export LESS_TERMCAP_ue=$'\E[0m'        # reset underline

alias startx="startx $XINITRC"
[[ -f ~/.bashrc ]] && . ~/.bashrc
[[ $(tty) = '/dev/tty1' ]] && startx
