#!/bin/sh

alias    mv="mv -iv"
alias    rm="rm -iv"
alias    ln="ln -iv"
alias    cp="cp -iv"
alias    up="cd .."
alias mkdir="mkdir -pv"
alias  grep="grep -i --color=auto"
alias    rg="rg --smart-case"
alias  tree="tree -F -C --ignore-case"

alias ls="ls -1HX --group-directories-first --{color,classify}=auto"
alias  l="ls -A"
alias la="ls -hgGAv --time-style='+%F %R'"

alias       s="systemctl"
alias       j="journalctl -fb"
alias       q="exit"
alias       c="clear"
alias      cl="clear"
alias     vim="nvim"
alias       v="vim"
alias      vi="vim"
alias       e="vim ."
alias       g="git"
alias    sxiv="nsxiv"
alias      py="python -q"
alias     ipy="ipython"
alias    psql="psql -q"
alias  ffmpeg="ffmpeg -hide_banner"
alias ffprobe='ffprobe -hide_banner -v quiet -print_format json -show_format -show_streams -show_chapters'

alias     nixrc="pushd \${HOME}/.files; \${EDITOR} \${HOME}/.files/flake.nix; popd"
alias     sshrc="pushd \${HOME}/.files; \${EDITOR} \${HOME}/.ssh/config; popd"
alias     zshrc="pushd \${HOME}/.files; \${EDITOR} \${XDG_CONFIG_HOME}/zsh/.zshrc; popd"
alias     zshpr="pushd \${HOME}/.files; \${EDITOR} \${XDG_CONFIG_HOME}/zsh/.zprofile; popd"
alias    bashrc="pushd \${HOME}/.files; \${EDITOR} \${XDG_CONFIG_HOME}/bash/bashrc; popd"
alias    bashpr="pushd \${HOME}/.files; \${EDITOR} \${XDG_CONFIG_HOME}/bash/bash_profile; popd"
alias profilerc="pushd \${HOME}/.files; \${EDITOR} \${XDG_CONFIG_HOME}/sh/profile; popd"
alias   aliasrc="pushd \${HOME}/.files; \${EDITOR} \${XDG_CONFIG_HOME}/sh/aliasrc; popd"
alias   inputrc="pushd \${HOME}/.files; \${EDITOR} \${XDG_CONFIG_HOME}/sh/inputrc; popd"
alias     vimrc="pushd \${HOME}/.files; \${EDITOR} \${XDG_CONFIG_HOME}/vim/vimrc; popd"
alias    nvimrc="pushd \${HOME}/.files; \${EDITOR} \${XDG_CONFIG_HOME}/nvim/lua/user/init.lua; popd"
alias     gitrc="pushd \${HOME}/.files; \${EDITOR} \${XDG_CONFIG_HOME}/git/config; popd"
alias    taskrc="pushd \${HOME}/.files; \${EDITOR} \${XDG_CONFIG_HOME}/taskwarrior/taskrc; popd"
alias    muttrc="pushd \${HOME}/.files; \${EDITOR} \${XDG_CONFIG_HOME}/neomutt/neomuttrc; popd"
alias    tmuxrc="pushd \${HOME}/.files; \${EDITOR} \${XDG_CONFIG_HOME}/tmux/tmux.conf; popd"

alias   .zshrc="source \${XDG_CONFIG_HOME}/zsh/.zshrc"
alias   .zshpr="source \${XDG_CONFIG_HOME}/zsh/.zprofile"
alias  .bashrc="source \${XDG_CONFIG_HOME}/bash/bashrc"
alias  .bashpr="source \${XDG_CONFIG_HOME}/bash/bash_profile"
alias .aliasrc="source \${XDG_CONFIG_HOME}/sh/aliasrc"
alias .inputrc="source \${XDG_CONFIG_HOME}/sh/inputrc"
