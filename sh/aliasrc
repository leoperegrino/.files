#!/bin/sh

alias mv="mv -iv"
alias rm="rm -iv"
alias ln="ln -iv"
alias cp="cp -iv"
alias up="cd .."
alias mkdir="mkdir -pv"
alias grep="grep -i --color=auto"
alias rg="rg --smart-case"
alias tree="tree -F -C --ignore-case"

alias ex="exa --oneline --icons --group-directories-first"
alias exa="exa --all"
alias exl="ex --long --git --time-style=long-iso"

alias ls="ls -1LX --group-directories-first --{color,classify}=auto"
alias l="ls -A"
alias la="ls -hgGAv --time-style='+%F %R'"

alias s="systemctl"
alias j="journalctl -fb"
alias q="exit"
alias c="clear"
alias cl="clear"
alias vim="nvim"
alias v="vim"
alias vi="vim"
alias e="vim ."
alias t="task"
alias g="git"
alias sxiv="nsxiv"
alias tt="taskwarrior-tui"

alias bitcoind="bitcoind -conf=\${XDG_CONFIG_HOME}/bitcoin/bitcoind.conf"
alias btcd="bitcoind"
alias bitcoin-cli="bitcoin-cli -conf=\${XDG_CONFIG_HOME}/bitcoin/bitcoin-cli.conf"
alias btc="bitcoin-cli"
alias monerod="/usr/bin/monerod --config-file \${XDG_CONFIG_HOME}/bitmonero/monerod.conf"
alias monero-wallet-cli="/usr/bin/monero-wallet-cli --config-file \${XDG_CONFIG_HOME}/bitmonero/monero-wallet-cli.conf"

alias   zshrc="\${EDITOR} \${XDG_CONFIG_HOME}/zsh/.zshrc"
alias   zshpr="\${EDITOR} \${XDG_CONFIG_HOME}/zsh/.zprofile"
alias  bashrc="\${EDITOR} \${XDG_CONFIG_HOME}/bash/bashrc"
alias  bashpr="\${EDITOR} \${XDG_CONFIG_HOME}/bash/bash_profile"
alias aliasrc="\${EDITOR} \${XDG_CONFIG_HOME}/sh/aliasrc"
alias inputrc="\${EDITOR} \${XDG_CONFIG_HOME}/sh/inputrc"
alias   vimrc="\${EDITOR} \${XDG_CONFIG_HOME}/vim/vimrc.vim"
alias   gitrc="\${EDITOR} \${XDG_CONFIG_HOME}/git/config"
alias  taskrc="\${EDITOR} \${XDG_CONFIG_HOME}/taskwarrior/taskrc"
alias  muttrc="\${EDITOR} \${XDG_CONFIG_HOME}/neomutt/neomuttrc"

alias   sozshrc="source \${XDG_CONFIG_HOME}/zsh/.zshrc"
alias   sozshpr="source \${XDG_CONFIG_HOME}/zsh/.zprofile"
alias  sobashrc="source \${XDG_CONFIG_HOME}/bash/bashrc"
alias  sobashpr="source \${XDG_CONFIG_HOME}/bash/bash_profile"
alias soaliasrc="source \${XDG_CONFIG_HOME}/sh/aliasrc"
alias soinputrc="source \${XDG_CONFIG_HOME}/sh/inputrc"

alias  shut="shutdown now"
alias  susp="systemctl suspend"
alias systl="sudo systemctl"

alias py="python -q"
alias ipy="ipython"
alias ncmpcpp="TERM=xterm ncmpcpp -q"
alias ranger="TERM=xterm ranger ."
alias ef='setsid -f easyeffects --gapplication-service &'
alias code="code --extensions-dir \${XDG_DATA_HOME}/vscode/extensions"
alias sqlite3="sqlite3 -init \${XDG_CONFIG_HOME}/sqlite3/sqliterc"
alias element-desktop="element-desktop --profile-dir \${XDG_DATA_HOME}/Element"
alias mbsync='mbsync -c \$HOME/.config/isync/mbsyncrc'
