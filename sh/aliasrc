#!/bin/sh

alias    mv="mv -iv"
alias    rm="rm -iv"
alias    ln="ln -iv"
alias    cp="cp -iv"
alias    up="cd .."
alias mkdir="mkdir -pv"
alias  grep="grep -i --color=auto"
alias    rg="rg --smart-case"
alias  tree="tree -F -C --ignore-case"

alias ls="ls -1HX --group-directories-first --{color,classify}=auto"
alias  l="ls -A"
alias la="ls -hgGAv --time-style='+%F %R'"

alias       s="systemctl"
alias       j="journalctl -fb"
alias       q="exit"
alias       c="clear"
alias      cl="clear"
alias     vim="nvim"
alias       v="vim"
alias      vi="vim"
alias       e="vim ."
alias       g="git"
alias    sxiv="nsxiv"
alias      py="python -q"
alias     ipy="ipython"

alias     sshrc="\${EDITOR} \${HOME}/.ssh/config"
alias     zshrc="\${EDITOR} \${XDG_CONFIG_HOME}/zsh/.zshrc"
alias     zshpr="\${EDITOR} \${XDG_CONFIG_HOME}/zsh/.zprofile"
alias    bashrc="\${EDITOR} \${XDG_CONFIG_HOME}/bash/bashrc"
alias    bashpr="\${EDITOR} \${XDG_CONFIG_HOME}/bash/bash_profile"
alias profilerc="\${EDITOR} \${XDG_CONFIG_HOME}/sh/profile"
alias   aliasrc="\${EDITOR} \${XDG_CONFIG_HOME}/sh/aliasrc"
alias   inputrc="\${EDITOR} \${XDG_CONFIG_HOME}/sh/inputrc"
alias     vimrc="\${EDITOR} \${XDG_CONFIG_HOME}/vim/vimrc.vim"
alias    nvimrc="\${EDITOR} \${XDG_CONFIG_HOME}/nvim/lua/user/init.lua"
alias     gitrc="\${EDITOR} \${XDG_CONFIG_HOME}/git/config"
alias    taskrc="\${EDITOR} \${XDG_CONFIG_HOME}/taskwarrior/taskrc"
alias    muttrc="\${EDITOR} \${XDG_CONFIG_HOME}/neomutt/neomuttrc"
alias    tmuxrc="\${EDITOR} \${XDG_CONFIG_HOME}/tmux/tmux.conf"

alias   .zshrc="source \${XDG_CONFIG_HOME}/zsh/.zshrc"
alias   .zshpr="source \${XDG_CONFIG_HOME}/zsh/.zprofile"
alias  .bashrc="source \${XDG_CONFIG_HOME}/bash/bashrc"
alias  .bashpr="source \${XDG_CONFIG_HOME}/bash/bash_profile"
alias .aliasrc="source \${XDG_CONFIG_HOME}/sh/aliasrc"
alias .inputrc="source \${XDG_CONFIG_HOME}/sh/inputrc"

alias  shut="shutdown now"
alias  susp="systemctl suspend"
