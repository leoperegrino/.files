#!/bin/sh

alias mv="mv -iv"
alias rm="rm -iv"
alias ln="ln -iv"
alias cp="cp -iv"
alias bat="bat --wrap=never"
alias mkdir="mkdir -pv"
alias grep="grep -i --color=always"
alias ls="EXA_ICON_SPACING=2 exa -1 --group-directories-first --color=always"
alias l="ls --icons"
alias la="l -la"

alias s="systemctl"
alias j="journalctl -fb"
alias h="history 1"
alias q="exit"
alias c="clear"
alias cl="clear"
alias v="vim"
alias vi="vim"
alias e="vim ."
alias t="task"
alias g="git"
alias tt="taskwarrior-tui"
alias help="run-help"

alias monerod="/usr/bin/monerod --config-file $XDG_CONFIG_HOME/bitmonero/monerod.conf"
alias monero-wallet-cli="/usr/bin/monero-wallet-cli --config-file $XDG_CONFIG_HOME/bitmonero/monero-wallet-cli.conf"
alias sqlite3="sqlite3 -init $XDG_CONFIG_HOME/sqlite3/sqliterc"

alias   zshrc="vim $XDG_CONFIG_HOME/zsh/.zshrc"
alias   zshpr="vim $XDG_CONFIG_HOME/zsh/.zprofile"
alias  bashrc="vim $XDG_CONFIG_HOME/bash/bashrc"
alias  bashpr="vim $XDG_CONFIG_HOME/bash/bash_profile"
alias   vimrc="vim $XDG_CONFIG_HOME/vim/vimrc.vim"
alias   gitrc="vim $XDG_CONFIG_HOME/git/config"
alias  taskrc="vim $XDG_CONFIG_HOME/taskwarrior/taskrc"
alias aliasrc="vim $XDG_CONFIG_HOME/sh/aliasrc"
alias inputrc="vim $XDG_CONFIG_HOME/sh/inputrc"
alias  muttrc="vim $XDG_CONFIG_HOME/neomutt/neomuttrc"

alias  shut="shutdown now"
alias  susp="systemctl suspend"
alias systl="sudo systemctl"

alias ipy="ipython"
alias ncmpcpp="ncmpcpp -q"
alias mbsync='mbsync -c $HOME/.config/isync/mbsyncrc'
