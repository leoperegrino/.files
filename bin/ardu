#!/bin/bash
[ $# = 0 ] && echo "no filename given" && exit 1
cat << MSG
choose option:
	1) compile
	2) upload
	3) both
MSG

read -r opt

compile="arduino-cli compile -b arduino:avr:uno $1"
upload="sudo arduino-cli upload -p /dev/ttyACM0 -b arduino:avr:uno ../$1"

case $opt in
	1) $compile;; 
	2) $upload;;
	3) $compile && $upload;;
esac
