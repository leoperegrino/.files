# vim: ft=config
def_key "f"
	dummy
def_key "F"
	dummy

def_key ">"
	volume_up
def_key "<"
	volume_down

# navigation
# hjkl
def_key "h"
	previous_column
def_key "h"
	jump_to_parent_directory
def_key "j"
	scroll_down
def_key "k"
	scroll_up
def_key "l"
	next_column
def_key "l"
	enter_directory
def_key "l"
	run_action
def_key "l"
	play_item

# scroll (artist|album)
def_key "["
	scroll_up_artist
def_key "]"
	scroll_down_artist
def_key "{"
	scroll_up_album
def_key "}"
	scroll_down_album
def_key "J"
	move_selected_items_down
def_key "K"
	move_selected_items_up

# g G page (up|down)
def_key "G"
	move_end
def_key "g"
	move_home
def_key "u"
	page_up
def_key "d"
	page_down

# interface
